{
  "packages": ["packages/*"],
  "version": "1.1.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "create": {
      "homepage": "https://github.com/hertzg/metekcity",
      "license": "MIT"
    },
    "publish": {
      "message": "chore(release): %s [skip ci]",
      "registry": "https://registry.npmjs.org",
      "tempTag": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s [skip ci]"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
